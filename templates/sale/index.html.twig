{% extends 'base.html.twig' %}

{% block title %}Sale index{% endblock %}

{% block body %}
    <h1>Ventas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sale in sales %}
            <tr>
                <td>{{ sale.id }}</td>
                <td>{{ sale.date ? sale.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>${{ sale.total }}</td>
                <td>
                    <a href="{{ path('sale_show', {'id': sale.id}) }}" class="btn btn-info">Detalles</a>                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay ventas</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br>
    <a href="{{ path('sale_new') }}" class="btn btn-primary">Realizar Compra</a>
{% endblock %}
